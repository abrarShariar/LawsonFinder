<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="2"
        >

        <ImageButton
            android:id="@+id/lawson_btn"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:shadowColor="@color/colorPrimaryDark"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:src="@drawable/lawson_logo"
            />

        <ImageButton
            android:id="@+id/location_btn"
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/location_logo"
            android:scaleType="fitCenter"
            />

        <ImageButton
            android:id="@+id/notifcation_btn"
            android:layout_height="50sp"
            android:layout_width="50sp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/notification_logo"
            android:scaleType="fitCenter"
            />


        <ImageButton
            android:id="@+id/ponta_btn"
            android:layout_height="45sp"
            android:layout_width="45sp"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:src="@drawable/ponta_logo"
            android:scaleType="fitCenter"
            />



    </android.support.v7.widget.GridLayout>
</RelativeLayout>
